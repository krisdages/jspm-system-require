{
  "name": "jspm-system-require",
  "version": "0.9.0",
  "description": "Courtesy module for a one-time require of jspm.Loader() to avoid System undefined errors when testing jspm-managed node apps, with the goal of being able to include it from the command line (e.g. mocha -r <modulename>). Without creating a named module systemjs complains about anonymous registration calls.",
  "main": "dist/main.js",
  "scripts": {
    "build": "babel -d dist src --auxiliary-comment-before ibabel --auxiliary-comment-after obabel",
    "build-watch": "babel -w -d dist src --auxiliary-comment-before ibabel --auxiliary-comment-after obabel && npm run test-watch",
    "test": "mocha dist/**.spec.js",
    "test-watch": "mocha -R min --watch dist dist/**/*.spec.js"
  },
  "babel": {
  	"sourceMaps": "both",
    "presets": [
      "es2015","stage-0"
    ],
    "plugins": [
    	"syntax-class-constructor-call",
    	"transform-class-constructor-call"
    ]
  },
  "repository": {
    "type": "git",
    "url": "github.com/krisdages/jspm-system-require"
  },
  "keywords": [
    "jspm",
    "systemjs",
    "babel",
    "register",
    "bootstrap"
  ],
  "author": "Kris Dages <krisdages@git.whiteboxsoftware.net>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-core": "^6.1.20",
    "babel-plugin-syntax-class-constructor-call": "^6.1.18",
    "babel-plugin-transform-class-constructor-call": "^6.1.18",
    "babel-plugin-transform-class-properties": "^6.1.20",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "chai": "^3.4.1",
    "eslint": "^1.9.0",
    "mocha": "^2.3.3"
  },
  "dependencies": {
    "jspm": "^0.16.14"
  },
  "jspm": {
    "directories": {
      "baseURL": "testing"
    },
    "configFile": "testing/jspm.js",
    "dependencies": {},
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  }
}
